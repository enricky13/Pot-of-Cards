<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".search_result_fragments.SpellTrapCardFragment">

    <TextView
        android:id="@+id/card_name_spell_trap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/text_color"/>
    <ImageView
        android:id="@+id/card_image_spell_trap"
        android:layout_width="421px"
        android:layout_height="614px" />
    <TextView
        android:id="@+id/card_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"/>
    <TextView
        android:id="@+id/card_desc_spell_trap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/text_color"/>
    <Button
        android:id="@+id/go_to_card_rulings_spell_trap_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/card_rulings"/>

</LinearLayout>