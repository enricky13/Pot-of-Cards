<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context=".before_search_fragments.CardSearchFragment">

    <EditText
        android:id="@+id/user_card_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:layout_alignParentTop="true"
        android:hint="@string/hint_user_card_search"
        android:textSize="24sp"/>
    <Button
        android:id="@+id/go_to_filter_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_card_search"
        android:layout_centerInParent="true"
        android:text="@string/filter"/>
    <Button
        android:id="@+id/go_to_card_collection_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/go_to_filter_button"
        android:layout_centerInParent="true"
        android:text="@string/start_search_text"/>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation_menu_bio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:menu="@menu/bottom_navigation_menu" />

</RelativeLayout>